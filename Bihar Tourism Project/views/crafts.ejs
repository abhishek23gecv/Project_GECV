<head>
    <title>Bihar Crafts</title>
    <link rel="stylesheet" href="/css/crafts.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <!-- Hero Section -->
    <section class="crafts-hero">
        <div class="hero-content">
            <h1 data-aos="fade-up">Discover the Exquisite Crafts of Bihar</h1>
            <p data-aos="fade-up" data-aos-delay="100">From the delicate Madhubani paintings to the intricate handloom textiles, explore the rich heritage of craftsmanship that defines Bihar.</p>
        </div>
    </section>

    <!-- Popular Crafts Section -->
    <section class="crafts-section">
        <h2 class="section-title" data-aos="fade-up">Popular Crafts</h2>
        <div class="crafts-grid">
            <% if (crafts && crafts.length > 0) { %>
                <% crafts.forEach(craft => { %>
                    <div class="craft-card" data-aos="zoom-in">
                        <img src="<%= craft.image %>" alt="<%= craft.title %>" class="craft-image">
                        <div class="craft-details">
                            <h3><%= craft.title %></h3>
                            <p><%= craft.description %></p>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No crafts available at the moment.</p>
            <% } %>
        </div>
    </section>
    

    <!-- Artisans Section -->
    <section class="artisans">
        <div class="container">
            <h2 class="section-title" data-aos="fade-up">Meet the Artisans</h2>
            <p class="section-description" data-aos="fade-up" data-aos-delay="100">Get to know the skilled craftsmen who keep Bihar's rich traditions alive. Their dedication and artistry have made Bihar's crafts famous worldwide.</p>
            <div class="artisans-grid">
                <% artisans.forEach(artisan => { %>
                    <div class="artisan-card" data-aos="fade-right">
                        <img src="<%= artisan.image %>" alt="<%= artisan.name %>" class="artisan-image">
                        <div class="artisan-details">
                            <h3><%= artisan.name %></h3>
                            <p><%= artisan.bio %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Crafting Process Section -->
    <section class="crafting-process">
        <div class="container">
            <h2 class="section-title" data-aos="fade-up">The Crafting Process</h2>
            <div class="process-steps">
                <% processes.forEach(step => { %>
                    <div class="process-step" data-aos="fade-up" data-aos-delay="<%= step.delay %>">
                        <i class="<%= step.icon %>"></i>
                        <h3><%= step.title %></h3>
                        <p><%= step.description %></p>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Explore More Section -->
    <section class="explore-more">
        <div class="container">
            <h2 class="section-title" data-aos="fade-up">Explore More</h2>
            <p data-aos="fade-up" data-aos-delay="100">Discover workshops, exhibitions, and events that celebrate Bihar's crafts and artisans.</p>
            <button class="explore-btn" data-aos="zoom-in">Learn More</button>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script>
        AOS.init();
    </script>
</body>

