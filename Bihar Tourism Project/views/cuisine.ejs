<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/cuisine.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css">
</head>
<body>
    <!-- Include Navbar -->
    <%- include('./partials/navbar') %>

    <!-- Hero Section -->
    <header class="cuisine-hero">
        <div class="hero-content">
            <h1>Explore the Flavors of Bihar</h1>
            <p>Authentic, Traditional, and Delicious! Discover the unique culinary heritage of Bihar.</p>
        </div>
    </header>

    <!-- Signature Dishes Section -->
    <section class="signature-dishes">
        <h2 class="section-title" data-aos="fade-down">Signature Dishes</h2>
        <div class="dishes-container">
            <% cuisine.forEach(dish => { %>
                <div class="dish-card" data-aos="fade-up">
                    <img src="<%= dish.image %>" alt="<%= dish.name %>" class="dish-image">
                    <div class="dish-details">
                        <h3><%= dish.name %></h3>
                        <p><%= dish.description %></p>
                        <span class="specialty">Specialty: <%= dish.specialty %></span>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>

    <!-- Unique Features Section -->
    <section class="unique-features">
        <h2 class="section-title" data-aos="fade-up">What Makes Bihari Cuisine Special?</h2>
        <div class="features-grid">
            <div class="feature-card" data-aos="zoom-in">
                <i class="fas fa-seedling"></i>
                <h3>Farm-Fresh Ingredients</h3>
                <p>Sourced locally to bring authentic flavors to every dish.</p>
            </div>
            <div class="feature-card" data-aos="zoom-in" data-aos-delay="100">
                <i class="fas fa-pepper-hot"></i>
                <h3>Spices & Aromas</h3>
                <p>Traditional spice blends that tantalize your taste buds.</p>
            </div>
            <div class="feature-card" data-aos="zoom-in" data-aos-delay="200">
                <i class="fas fa-utensils"></i>
                <h3>Rich Heritage</h3>
                <p>Recipes handed down through generations.</p>
            </div>
        </div>
    </section>


    <!-- Include Footer -->
    <%- include('./partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>
</html>
